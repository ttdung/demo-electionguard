# ===========================================
# Application Settings
# ===========================================
APP_NAME="ElectionGuard Demo"
DEBUG=True
API_V1_PREFIX="/app/v1"

# ===========================================
# Database
# ===========================================
DATABASE_URL="sqlite+aiosqlite:///./election_demo.db"
# Docker: Use path inside container
# DATABASE_URL="sqlite+aiosqlite:////app/data/election_demo.db"

# ===========================================
# Logging
# ===========================================
LOG_LEVEL="INFO"

# ===========================================
# Docker Configuration
# ===========================================

# API server port (exposed to host)
API_PORT=8088

# Frontend server port (exposed to host)
FRONTEND_PORT=8089

# Database path for Docker volume
DATABASE_PATH=./data
DATABASE_NAME=election_demo.db

# Frontend path for Docker volume
FRONTEND_PATH=./frontend

# Nginx config path (optional override)
NGINX_CONFIG_PATH=./nginx.conf

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS=*
# Production: Set specific domains
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
